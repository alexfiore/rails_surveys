<h1>Create a survey!</h1>

<%= form_for @survey do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, placeholder: "Give me a title" %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content, placeholder: "Give me a short description for your survey", rows: 4, cols: 50  %><br>
  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', :f => builder %>
  <% end %>
  <%= f.submit "Hooray!" %>
<% end %>
